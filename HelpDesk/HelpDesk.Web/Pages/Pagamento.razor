@page "/pagamento"

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">

    <MudText Typo="Typo.h5" GutterBottom="true">Formas de Pagamento</MudText>

    <MudCard Elevation="2">
        <MudCardContent>

            <MudStack Spacing="4">

                <MudCard Outlined="true">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                            <MudIcon Icon="@Icons.Material.Filled.Receipt" Color="Color.Info" Size="Size.Large" />
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.h6">Boleto Bancário</MudText>
                                <MudText Typo="Typo.body2">Pague em qualquer banco ou casa lotérica até o vencimento. A compensação pode levar até 3 dias úteis.</MudText>
                            </MudStack>
                        </MudStack>
                    </MudCardContent>
                </MudCard>

                <MudCard Outlined="true">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                            <MudIcon Icon="@Icons.Material.Filled.CreditCard" Color="Color.Success" Size="Size.Large" />
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.h6">Cartão de Crédito</MudText>
                                <MudText Typo="Typo.body2">Cadastre seu cartão e ative o pagamento recorrente. Aceitamos Visa, Mastercard e Elo.</MudText>
                            </MudStack>
                        </MudStack>
                    </MudCardContent>
                </MudCard>

                <MudCard Outlined="true">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                            <MudIcon Icon="@Icons.Material.Filled.QrCode2" Color="Color.Primary" Size="Size.Large" />
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.h6">PIX</MudText>
                                <MudText Typo="Typo.body2">Pague instantaneamente usando o QR Code ou o código Copia e Cola disponível na sua fatura.</MudText>
                            </MudStack>
                        </MudStack>
                    </MudCardContent>
                </MudCard>

            </MudStack>

            <MudStack AlignItems="AlignItems.End" Class="mt-6">
                <MudButton Href="/chamado/novo/"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.HeadsetMic">
                    Problemas com Pagamento? Fale Conosco
                </MudButton>
            </MudStack>

        </MudCardContent>
    </MudCard>

</MudContainer>