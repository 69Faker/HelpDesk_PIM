@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Fixed="false" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@((e) => DrawerToggle())" />

        <MudIcon Icon="@Icons.Material.Filled.Cloud" Color="Color.Primary" Size="Size.Large" Class="ml-3 mr-3" />
        <MudText Typo="Typo.h5">@PageTitle</MudText>
        <MudSpacer />
        <MudText Class="mr-3">Olá, Cliente!</MudText>
        <MudAvatar Color="Color.Secondary">C</MudAvatar>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen"
               ClipMode="DrawerClipMode.Always"
               Variant="DrawerVariant.Mini"
               MiniWidth="60px"
               Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="pa-6">
        <MudContainer MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<Chatbot />

@code {
    // CORREÇÃO: Começa como 'false' para mostrar apenas os ícones (igual ao protótipo)
    private bool _drawerOpen = false;
    private bool _isDarkMode = true;

    public string PageTitle { get; set; } = "Dashboard";

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = Colors.Blue.Default,
            Secondary = Colors.Blue.Lighten1,
            Background = "#1f2937",
            AppbarBackground = "#1f2937",
            Surface = "#111827",
            DrawerBackground = "#111827",
            TextPrimary = "rgba(255,255,255, 0.90)",
            TextSecondary = "rgba(255,255,255, 0.65)",
            ActionDefault = "rgba(255,255,255, 0.75)",
        }
    };
}